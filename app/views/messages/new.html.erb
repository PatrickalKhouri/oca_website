<div class="container">
  <div class="mt-5 d-flex justify-content-center flex-column col-8">
    <%= simple_form_for(@message) do |f| %>
        <%= f.input :name %>
        <%= f.input :email %>
        <%= f.input :phone_number %>
        <%= f.input :body %>
        <%= f.submit class: "btn btn-primary mt-3 mb-5" %>
    <% end %>
  </div>
</div>