<div class="container log-in-form">
<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                label: "Senha",
                required: false,
                autofocus: true,
                input_html: { autocomplete: "senha" } %>
  </div>

  <div>
    <%= f.button :submit, "Logar", class: "btn btn-outline-warning btn-sm btn-block"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
