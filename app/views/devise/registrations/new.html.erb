<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name,
                required: true,
                autofocus: true,  
                label: 'Nome' %>
    <%= f.input :last_name,
                required: true,  
                label: 'Sobrenome'%>
    <%= f.input :gender,
                required: true,
                collection: ["Masculino", "Feminino", "Outro"],
                label: 'Gênero'%>
    <%= f.input :phone,
                required: true,  
                label: 'Telefone'%> 
    <%= f.input :email,
                required: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                label: 'Senha' %>
    <%= f.input :password_confirmation,
                required: true,
                label: 'Confirmação de Senha'%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Registrar-se" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
